package com.capgemini.gameoflife;

import static org.junit.Assert.*;

import org.junit.Test;

public class BoardTest {
	private Board board;

	@Test
	public void shouldReturnCorrectWidthForCreatedBoard() {
		// given
		int width=10;
		int height=11;
		board=new Board(height, width);
		// when
		int actualWidth=board.getNumberOfColumns();
		// then
		assertEquals(width, actualWidth);
	}
	
	@Test
	public void shouldReturnCorrectHeightForCreatedBoard() {
		// given
		int numberOfColumns=10;
		int numberOfRows=11;
		board=new Board(numberOfRows,numberOfColumns);
		// when
		int actualHeight=board.getNumberOfRows();
		// then
		assertEquals(numberOfRows, actualHeight);
	}

}
