package com.capgemini.gameoflife;

import static org.junit.Assert.*;

import org.junit.Test;

public class BoardTest {
	private Board board;

	@Test
	public void shouldReturnCorrectWidthForCreatedBoard() {
		// given
		int width=10;
		int height=10;
		board=new Board(height, width);
		// when
		int actualWidth=board.getWidth();
		// then
		assertEquals(width, actualWidth);
	}
	
	@Test
	public void shouldReturnCorrectHeightForCreatedBoard() {
		// given
		int width=10;
		int height=10;
		board=new Board( height,width);
		// when
		int actualHeight=board.getHeight();
		// then
		assertEquals(width, actualHeight);
	}

}
