package com.capgemini.fibonacci;

import static org.junit.Assert.*;

import org.junit.Test;

public class FibonacciNegativeArgumentTest {

	
	
		@Test //(expected = IllegalArgumentException.class)
		public void testFibInt() throws IllegalArgumentException{
			try {
				Fibonacci.fib(-7);
				fail("ujemny argument powinien wyrzucic wyjatek");
			} catch (IllegalArgumentException e) {
				assertTrue(e.getMessage().contains("Numer elementu ciagu musi byc liczba nieujemna!"));
			}
			
		
	}

}
